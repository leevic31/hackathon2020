<div class="col-6 col-sm-6 col-md-7 col-lg-6">
  <div class="mb-4 bg-white text-dark px-2 py-1">
    <h2 class="h4">Tweets</h2>
    <% if @tweets.present? %>
<table class="table">
  <thead>
    <tr>
      <th scope="col-2">Published At &middot; Tweet</th>
      <th scope="col-2">View</th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
      <td>
        <small><%= tweet.publishedAt %></small></br>
        <%= tweet.content %>
      </td>
      <td>
      <u>
        <%= link_to "Details" %>
      </u>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @tweets.present? %>
<%= paginate @tweets %>
<% end %>

  <% else %>

    <h2 class="h6">Pas de données disponibles pour affichage.</br></br>No data to display.</h2>

  <% end %>

</div>
</div>
            <div class="col-6 col-sm-6 col-md-7 col-lg-5">
              <div class="mb-4 bg-white text-dark px-2 py-1">
                <h2 class="h4">Proportions</h2>

                  <% if @tweets.present? %>


                <%= pie_chart @tweets.group(:publishedAt).count %>
                  <% else %>

    <h2 class="h6">Pas de données disponibles pour affichage.</br></br>No data to display.</h2>

  <% end %>

              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-6 col-sm-6 col-md-7 col-lg-6">
              <div class="mb-4 bg-white text-dark px-2 py-1">
                <h2 class="h4">Over Time</h2>


                <% if @tweets.present? %>
                  <%= line_chart @tweets.group_by_day(:publishedAt).count %>
                    <% else %>

    <h2 class="h6">Pas de données disponibles pour affichage.</br></br>No data to display.</h2>

  <% end %>

              </div>
            </div>
            <div class="col-6 col-sm-6 col-md-7 col-lg-5">
              <div class="mb-4 bg-white text-dark px-2 py-1">
                <h2 class="h4">Additional Notes</h2>
                <% if @notes %>
                <p>A note section goes here</p>
                  <% else %>

    <h2 class="h6">Pas de données disponibles pour affichage.</br></br>No data to display.</h2>

  <% end %>

              </div>
            </div>
          </div>
        </div>

